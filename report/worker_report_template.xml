<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="worker_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page" style="background-color: #f4f6f7; padding: 20px; border-radius: 10px;">
                        
                        <div style="text-align: center; margin-bottom: 20px;">
                            <h1 style="font-size: 24px; color: #007bff;">Worker Information</h1>
                            <p style="font-size: 16px;">Below are the details of the worker.</p>
                        </div>

                        <div class="row" style="padding: 10px 0;">
                            <div class="col-6">
                                <p><strong style="color: #17a2b8;">Name:</strong> <span t-esc="doc.name"/></p>
                            </div>
                            <div class="col-6">
                                <p><strong style="color: #17a2b8;">Position:</strong> <span t-esc="doc.function"/></p>
                            </div>
                        </div>

                        <div class="row" style="padding: 10px 0;">
                            <div class="col-6">
                                <p><strong style="color: #17a2b8;">Email:</strong> <span t-esc="doc.email"/></p>
                            </div>
                            <div class="col-6">
                                <p><strong style="color: #17a2b8;">Mobile:</strong> <span t-esc="doc.mobile"/></p>
                            </div>
                        </div>

                        <div class="row" style="padding: 10px 0;">
                            <div class="col-12">
                                <p><strong style="color: #17a2b8;">Address:</strong> 
                                    <span t-esc="doc.street"/> 
                                    <span t-esc="doc.street2"/> 
                                    <span t-esc="doc.city"/> 
                                    <span t-esc="doc.state_id"/>
                                </p>
                            </div>
                        </div>

                        <div class="row" style="padding: 10px; text-align: center; margin-top: 30px;">
                            <p style="font-style: italic; color: #888;">Report generated by Dard_e_Lab</p>
                        </div>
                        
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="worker_report_temp" model="ir.actions.report">
        <field name="name">Worker Card</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">Dard_e_Lab.worker_report_template</field>
        <field name="binding_model_id" ref="model_res_partner"/>
    </record>

</odoo>
