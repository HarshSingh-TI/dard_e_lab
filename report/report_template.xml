<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="pathology_lab_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page" style="position: relative; background-color: #e0f7fa; padding: 20px; font-family: Arial, sans-serif;">


                        <h1 style="text-align: center; color: #2c3e50; font-size: 24px;">Test Package Report</h1>


                        <div style="margin-top: 20px; display: flex; justify-content: space-between;">
                            
                            <div style="flex: 1;">
                                <p><strong>Reference:</strong> <span t-esc="doc.reference" style="font-weight: bold; font-size: 18px;"/></p>
                            </div>

                            <div style="flex: 1; text-align: right;">
                                <img t-att-src="'/report/barcode/QR/%s' % doc.reference" alt="Barcode for Reference" style="width: 130px; height: 40px;" />
                            </div>
                        </div>


                        <div style="margin-top: 20px; text-align: left;">
                            <p><strong>Patient Name:</strong> <span t-esc="doc.cus_name" style="font-size: 18px;"/></p>
                            <p><strong>Address:</strong> <span t-esc="doc.cus_add" style="font-size: 18px;"/></p>
                        </div>


                        <div style="margin-top: 30px;">
                            <h2 style="color: #16a085; font-size: 20px;">Product Information</h2>
                            <table class="table table-bordered" style="width: 100%; text-align: left; border-collapse: collapse; margin-top: 15px;">
                                <thead style="background-color: #b2ebf2;">
                                    <tr>
                                        <th style="padding: 10px; border: 1px solid #ddd;">Product Name</th>
                                        <th style="padding: 10px; border: 1px solid #ddd;">Sales Price (USD)</th>
                                        <th style="padding: 10px; border: 1px solid #ddd;">Taxes %</th>
                                        <th style="padding: 10px; border: 1px solid #ddd; text-align:right;">Visit Charge (USD)</th>
                                        <th style="padding: 10px; border: 1px solid #ddd; text-align:right;">Price (USD)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td style="padding: 10px; border: 1px solid #ddd;"><span t-esc="doc.name"/></td>
                                        <td style="padding: 10px; border: 1px solid #ddd;"><span t-esc="doc.list_price"/></td>
                                        <td style="padding: 10px; border: 1px solid #ddd;">15%</td>
                                        <td style="padding: 10px; border: 1px solid #ddd; text-align:right;">
                                            <t t-if="doc.home_sample">100</t>
                                            <t t-if="not doc.home_sample">0</t>
                                        </td>
                                    </tr>
                                </tbody>
                                <tfoot style="background-color: #b2ebf2;">
                                    <tr>
                                        <td style="padding: 10px; border: 1px solid #ddd;" colspan="4"><strong>Grand Total</strong></td>
                                        <td style="padding: 10px; border: 1px solid #ddd; text-align:right;">
                                            <strong>
                                                <t t-esc="doc.standard_price"/>
                                            </strong>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>



                        <div style="margin-top: 20px;">
                            <p><strong>Checkup Date:</strong> <span t-esc="doc.create_date" style="font-size: 18px;"/></p>
                            <p><strong>Sampler:</strong> <span t-esc="doc.tester_id.name" style="font-size: 18px;"/></p>
                            <p><strong>Is Pathology:</strong> <span t-esc="'Yes' if doc.Is_pathology else 'No'" style="font-size: 18px;"/></p>
                            <p><strong>Home Sample:</strong> <span t-esc="'Yes' if doc.home_sample else 'No'" style="font-size: 18px;"/></p>
                        </div>



                        <div style="margin-top: 40px; text-align: right;">
                            <p><strong>Authorized Signature:</strong></p>
                            <img src="https://as1.ftcdn.net/v2/jpg/05/60/57/98/1000_F_560579860_G1tkXjFWTTQBVmrQoB20L3u0MpmfBkJt.jpg" alt="Digital Signature" style="width: 200px; height: 100px;" />
                        </div>



                        <div style="position: absolute; bottom: 20px; width: 100%; text-align: center;">
                            <p style="font-style: italic;"><strong>Note:</strong> It is a computer-generated invoice</p>
                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="test_package_report_temp" model="ir.actions.report">
        <field name="name">Test Card</field>
        <field name="model">product.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">Dard_e_Lab.pathology_lab_report_template</field>
        <field name="binding_model_id" ref="model_product_product"/>
        <field name="print_report_name">"Package_%s" % (object.reference)</field>
    </record>

</odoo>
