<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="pathology_lab_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page" style="background-color: #f8f9fa; padding: 20px; border-radius: 10px;">

                        <!-- Barcode Section -->
                        <div style="text-align: center; margin-bottom: 20px;">
                            <h2 style="font-size: 24px; color: #007bff;">Test Package Report</h2>
                            <p style="font-size: 16px;">Report ID: <span t-esc="doc.reference"/></p>
                            <img t-att-src="'/report/barcode/?type=Code128&value=%s&width=600&height=100' % doc.reference" alt="Barcode" style="margin-top: 10px;"/>
                        </div>

                        <!-- Report Details Section -->
                        <div class="row" style="margin-bottom: 20px;">
                            <div class="col-6">
                                <p><strong style="color: #17a2b8;">Checkup Date:</strong> <span t-esc="doc.create_date"/></p>
                            </div>
                            <div class="col-6">
                                <p><strong style="color: #17a2b8;">Reference:</strong> <span t-esc="doc.reference"/></p>
                            </div>
                        </div>

                        <div class="row" style="margin-bottom: 20px;">
                            <div class="col-12">
                                <p><strong style="color: #17a2b8;">Sampler:</strong> <span t-esc="doc.tester_id.name"/></p>
                            </div>
                        </div>

                        <div class="row" style="margin-bottom: 20px;">
                            <div class="col-6">
                                <p><strong style="color: #17a2b8;">Is Pathology:</strong> 
                                    <span t-esc="'Yes' if doc.Is_pathology else 'No'"/>
                                </p>
                            </div>
                            <div class="col-6">
                                <p><strong style="color: #17a2b8;">Home Sample:</strong> 
                                    <span t-esc="'Yes' if doc.home_sample else 'No'"/>
                                </p>
                            </div>
                        </div>

                        <!-- Price Section in Tabular Form -->
                        <table class="table table-bordered" style="margin-top: 20px; background-color: #ffffff;">
                            <thead>
                                <tr style="background-color: #007bff; color: #ffffff;">
                                    <th>Description</th>
                                    <th>Price (USD)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Test Package Price</td>
                                    <td><span t-esc="doc.standard_price"/> USD</td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Total Section -->
                        <div class="row" style="margin-top: 20px; text-align: right;">
                            <div class="col-12">
                                <p style="font-weight: bold; font-size: 18px;">Total: <span t-esc="doc.standard_price"/> USD</p>
                            </div>
                        </div>

                        <div class="row" style="padding: 10px; text-align: center; margin-top: 30px;">
                            <p style="font-style: italic; color: #888;">Report generated by Dard_e_Lab</p>
                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="test_package_report_temp" model="ir.actions.report">
        <field name="name">Test Package Report</field>
        <field name="model">product.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">Dard_e_Lab.pathology_lab_report_template</field>
        <field name="binding_model_id" ref="model_product_product"/>
    </record>

</odoo>
